mixin brand (items)
    for item in items 
        a.br(href=item.url) 
            img(src=item.src, alt=item.alt)


mixin blogItem(blogData)
    .blog-item.flex
        .blog-item-img
            img(src=blogData.src, alt=blogData.alt)
        .blog-item-descr-info.flex
            .blog-item-descr
                h2= blogData.title
                p= blogData.description
            .blog-item-btn.flex
                a.read(href="") читати
                .hashtag
                    each hashtag in blogData.hashtags
                        a.hashtag-button(href='#')= hashtag


mixin newArrivalsContent(imageSrc, imageAlt, title, price)
    .new-arrivals-content 
        figure 
            ficaption 
                .img-content-arrivals.flex
                    img(src=imageSrc, alt=imageAlt)
                .description-arrivals 
                    h2.clock_h3= title
                    p.clock_p= price

